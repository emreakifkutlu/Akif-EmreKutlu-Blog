@using System.Web.Optimization
@using Blog.DAL.Entities
@{
    Layout = null;
}
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Şifremi Unuttum</title>
    @Styles.Render("~/bundles/styles")
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Şifre Sıfırla</div>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    <label>@ViewBag.Msg</label>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "E-posta adresinizi giriniz" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                        @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email address">*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Yeni şifrenizi girin" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                    </div><!-- form-group -->
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.PasswordConfirm, new { @class = "form-control", @type = "password", @placeholder = "Yeni şifrenizi onaylayın" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.PasswordConfirm)</span>
                        @Html.HiddenFor(x => x.Id)

                    </div><!-- form-group -->
                    <input type="submit" class="btn btn-primary btn-block" value="Şifremi Sıfırla" />
                    @*<a class="btn btn-primary btn-block" href="login.html">Şifremi Sıfırla</a>*@
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Users/Register">Kayıt Ol</a>
                    <a class="d-block small" href="/Users/Login">Giriş Sayfası</a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
