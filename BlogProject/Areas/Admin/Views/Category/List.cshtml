@using System.Web.Optimization
@using Blog.DAL.Entities
@model List<Category>
@{
    ViewBag.Title = "Listele";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Konu Sayısı</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.PostCount</td>
                <td><a href="/Admin/Category/Update/@item.Id" class="btn btn-primary btn-block">Güncelle</a></td>
                <td><a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger btn-block">Sil</a></td>
            </tr>
        }

    </tbody>
</table>
