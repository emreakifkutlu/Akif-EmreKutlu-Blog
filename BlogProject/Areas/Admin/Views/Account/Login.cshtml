@using System.Web.Optimization
@using Blog.DAL.Entities
@{
    Layout = null;
}
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Giriş Sayfası</title>
    @Styles.Render("~/bundles/styles")
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Oturum Açınız</div>
            <div class="card-body">
               
               @using (Html.BeginForm())
               {
                <label>@ViewBag.Msg</label>
                @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="exampleInputEmail1">E-postanız:</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "E-posta adresinizi giriniz" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Şifreniz:</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Şifrenizi giriniz" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-check", @type = "checkbox" })Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary btn-block" value="Giriş Yap" />
                    @*<a class="btn btn-primary btn-block" href="index.html">Giriş Yap</a>*@
               }
                @*<div class="text-center">
                    <a class="d-block small mt-3" href="/Admin/Account/Register">Kayıt Ol</a>
                    <a class="d-block small" href="/Admin/Account/ForgotPassword">Şifremi Unuttum</a>
                </div>*@
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
