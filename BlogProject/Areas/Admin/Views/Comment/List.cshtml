@using System.Web.Optimization
@using Blog.DAL.Entities
@model IEnumerable<Comment>
@{
    ViewBag.Title = "Listele";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Yorum</th>
            <th scope="col">Yorum Tarihi</th>
            @*<th scope="col">Kullanıcı</th>*@
            <th scope="col">Post</th>
            <th scope="col">Beğeni Sayısı</th>
            <th scope="col">Beğenmeme Sayısı</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CommentBody</td>
                <td>@item.CommentDate</td>
                @*<td>@item.User.Name</td>*@
                <td>@item.Post.Title</td>
                <td>@item.LikeCount</td>
                <td>@item.DislikeCount</td>
                <td><a href="/Admin/Comment/Update/@item.Id" class="btn btn-primary btn-block">Güncelle</a></td>
                <td><a href="/Admin/Comment/Delete/@item.Id" class="btn btn-danger btn-block">Sil</a></td>
            </tr>
        }

    </tbody>
</table>
